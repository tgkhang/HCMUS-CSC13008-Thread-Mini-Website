{{>header}}

<main class="col-md-5 d-flex flex-column align-items-center pt-5 mt-5 container">
    <div class="pt-5 container col-md-12">
        <h4 class="mb-4 text-center">Notifications</h4>

        <!-- Tabs -->
        <ul class="nav nav-tabs notification-tabs justify-content-center mb-4 flex-wrap" id="notificationTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all" aria-selected="true">All</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="like-tab" data-bs-toggle="tab" data-bs-target="#like" type="button" role="tab" aria-controls="like" aria-selected="false">Likes</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="comment-tab" data-bs-toggle="tab" data-bs-target="#comment" type="button" role="tab" aria-controls="comment" aria-selected="false">Comments</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="follow-tab" data-bs-toggle="tab" data-bs-target="#follow" type="button" role="tab" aria-controls="follow" aria-selected="false">New Followers</button>
            </li>
        </ul>

    </div>

    <!-- Notification Content -->
    <div class="container col-md-10 my-4">
        <div class="tab-content" id="notificationTabsContent">
            <!-- All Notifications Tab -->
            <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                <div class="mb-3 notification-item follow">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">John Doe</strong>
                            <p class="mb-0">started following you</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">2 hours ago</p>
                    </div>
                </div>
                <div class="mb-3 notification-item like">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Jane Smith</strong>
                            <p class="mb-0">liked your thread</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">4 hours ago</p>
                    </div>
                </div>
                <div class="mb-3 notification-item comment">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Mike Johnson</strong>
                            <p class="mb-0">commented on your thread</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">5 hours ago</p>
                    </div>
                </div>
                <div class="mb-3 notification-item follow">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Emily Davis</strong>
                            <p class="mb-0">started following you</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">2 hours ago</p>
                    </div>
                </div>
            </div>

            <!-- Likes Tab -->
            <div class="tab-pane fade" id="like" role="tabpanel" aria-labelledby="like-tab">
                <div class="mb-3 notification-item like">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Jane Smith</strong>
                            <p class="mb-0">liked your thread</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">4 hours ago</p>
                    </div>
                </div>
            </div>

            <!-- Comments Tab -->
            <div class="tab-pane fade" id="comment" role="tabpanel" aria-labelledby="comment-tab">
                <div class="mb-3 notification-item comment">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Mike Johnson</strong>
                            <p class="mb-0">commented on your thread</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">5 hours ago</p>
                    </div>
                </div>
            </div>

            <!-- Followers Tab -->
            <div class="tab-pane fade" id="follow" role="tabpanel" aria-labelledby="follow-tab">
                <div class="mb-3 notification-item follow">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">John Doe</strong>
                            <p class="mb-0">started following you</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">2 hours ago</p>
                    </div>
                </div>
                <div class="mb-3 notification-item follow">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center">
                            <strong class="me-2">Emily Davis</strong>
                            <p class="mb-0">started following you</p>
                        </div>
                        <p class="text-muted mt-1 mb-0">2 hours ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{{> navBar}}

<!-- Custom Styles -->
<style>
    /* Custom Tabs */
    .nav-tabs .nav-link {
        border-radius: 25px;
        font-weight: bold;
        padding: 10px 20px;
        color: #6c757d; /* Grey Text */
        border: 1px solid #6c757d;
        transition: all 0.3s ease-in-out;
    }

    .nav-tabs .nav-link.active {
        background-color: #6c757d; /* Active Tab Grey */
        color: #fff;
        border-color: #6c757d;
    }

    .nav-tabs .nav-link:hover {
        background-color: #f1f1f1;
    }

    .notification-item {
        background-color: #f8f9fa;
        border: 1px solid #e3e3e3;
        border-radius: 8px;
        padding: 15px;
        transition: all 0.3s ease-in-out;
    }

    .notification-item:hover {
        background-color: #e9ecef;
    }

    .notification-item.like {
        border-left: 4px solid #ff6b6b; /* Red for likes */
    }

    .notification-item.comment {
        border-left: 4px solid #66c2a5; /* Green for comments */
    }

    .notification-item.follow {
        border-left: 4px solid #6c757d; /* Grey for follows */
    }

    .notification-item p {
        margin-bottom: 0;
    }

    .notification-item .d-flex {
        align-items: center;
    }

    

</style>
