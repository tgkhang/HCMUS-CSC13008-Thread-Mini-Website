<li
  class="list-group-item d-flex justify-content-between align-items-center shadow-sm rounded mb-2 p-3 hover-card"
>
  <div class="d-flex align-items-center flex-grow-1">
    <img
      src="{{imagePath}}"
      alt="Avatar"
      class="rounded-circle me-3"
      style="width: 50px; height: 50px; object-fit: cover; cursor: pointer;"
      onclick="location.href='/{{userName}}'"
    />
    <div class="text-truncate" style="min-width: 0;">
      <strong class="truncate d-block">{{firstName}} {{lastName}}</strong>
      <small class="truncate text-muted">{{userName}}</small>
    </div>
  </div>
  <div class="d-flex align-items-center flex-shrink-0 gap-3">
    <a
      href="/{{userName}}"
      class="btn btn-outline-secondary my-2 my-sm-0"
      onclick="event.stopPropagation();"
    >
      View
    </a>

    <a
      href="#"
      role="button"
      class="btn btn-outline-secondary my-2 my-sm-0{{#if isFollowed}}isFollowed{{/if}}"
      id="{{userName}}"
      aria-pressed="{{#if isFollowed}}true{{else}}false{{/if}}"
      onclick="followHandle('{{userName}}'); return false;"
    >
      {{#if isFollowed}}Unfollow{{else}}Follow{{/if}}
    </a>
  </div>
</li>


<style>
  .truncate {
    white-space: nowrap; /* Prevent text from wrapping */
    overflow: hidden; /* Hide overflow text */
    text-overflow: ellipsis; /* Add ellipsis (...) for truncated text */
  }
  .btn-outline-secondary {
    border-radius: 50px;
    padding: 0.65rem 1rem; 
    font-size: 1rem;
  }

  .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: white;
  }


  .btn-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: nowrap; /* Prevent wrapping */
  }

  /* Avatar Styling */
  .rounded-circle {
    width: 40px;
    height: 40px;
    object-fit: cover;
  }

  /* Adjustments for Mobile Screens */
  @media (max-width: 768px) {


    .btn-container {
      gap: 0.3rem; /* Reduce gap between buttons on mobile */
    }

    .rounded-circle {
      width: 36px;
      height: 36px; /* Slightly smaller avatar for mobile */
    }

    .truncate {
    white-space: nowrap; /* Prevent text from wrapping */
    overflow: hidden; /* Hide overflow text */
    text-overflow: ellipsis; /* Add ellipsis (...) for truncated text */
  }

    .list-group-item {
      padding: 10px; /* Reduce padding on smaller screens */
    }
  }
</style>





