<li
  class="list-group-item d-flex justify-content-between align-items-center shadow-sm rounded mb-2 p-3 hover-card"
>
  <div class="d-flex align-items-center flex-grow-1">
    <img
      src="{{imagePath}}"
      alt="Avatar"
      class="rounded-circle me-3"
      style="width: 40px; height: 40px; object-fit: cover; cursor: pointer;"
      onclick="location.href='/{{userName}}'"
    />
    <div class="text-truncate">
      <strong class="truncate d-block">{{firstName}} {{lastName}}</strong>
      <small class="truncate text-muted">{{userName}}</small>
    </div>
  </div>
  <div class="d-flex flex-column align-items-end flex-shrink-0">
    <a
      href="/{{userName}}"
      class="btn btn-outline-secondary btn-sm mb-1"
      onclick="event.stopPropagation();"
    >
      View
    </a>
    <a
      href="#"
      role="button"
      class="btn btn-outline-secondary btn-sm {{#if isFollowed}}isFollowed{{/if}}"
      id="{{userName}}"
      aria-pressed="{{#if isFollowed}}true{{else}}false{{/if}}"
      onclick="followHandle('{{userName}}'); return false;"
    >
      {{#if isFollowed}}Unfollow{{else}}Follow{{/if}}
    </a>
  </div>
</li>



<style>
  /* General Styling */
  .list-group-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    border: 1px solid #e3e3e3;
    border-radius: 8px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .list-group-item:hover {
    background-color: #f8f9fa;
    transform: translateY(-2px);
  }

  /* Avatar Styling */
  .rounded-circle {
    width: 40px;
    height: 40px;
    object-fit: cover;
  }

  /* Text Truncation */
  .truncate {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
  }

  /* Buttons Styling */
  .btn-outline-secondary {
    border-radius: 50px;
    font-size: 0.9rem;
    padding: 0.4rem 0.8rem;
    flex-shrink: 0;
  }

  .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: white;
  }

  /* Align Buttons Vertically on Mobile */
  @media (max-width: 768px) {
    .d-flex {
      flex-wrap: nowrap;
    }

    .btn-outline-secondary {
      font-size: 0.8rem;
      padding: 0.3rem 0.6rem;
    }

    .list-group-item {
      padding: 8px;
    }

    .d-flex.flex-column {
      align-items: flex-start;
    }
  }
</style>






