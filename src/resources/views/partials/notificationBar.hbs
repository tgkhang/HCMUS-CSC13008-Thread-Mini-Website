<div class="mb-3 notification-item 
    {{#if (eq type "FOLLOW")}}follow{{/if}} 
    {{#if (eq type "LIKE")}}like{{/if}} 
    {{#if (eq type "COMMENT")}}comment{{/if}}">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
        <div class="d-flex flex-column text-start w-100">
            <div class="ps-4">
                <strong class="me-1 d-block">
                    <a href="/{{sourceUserName}}" class="text-decoration-none text-dark">{{sourceUserName}}</a>
                </strong>
                <p class="mb-0" style="font-size: 15px;">
                    {{#if (eq type "FOLLOW")}}started following you{{/if}}
                    {{#if (eq type "LIKE")}}liked your thread{{/if}}
                    {{#if (eq type "COMMENT")}}commented on your thread{{/if}}
                </p>
            </div>
            <p class="text-muted mt-1 mb-0 ps-4">{{timeExpectation createdAt}}</p>
        </div>

        <button
            type="button"
            class="btn btn-outline-secondary btn-sm mt-2 mt-md-0 ms-md-3 d-flex align-items-center notification-toggle"
            id="notification-{{id}}"
            data-notification-id="{{id}}"
            data-is-seen="{{isSeen}}"
        >
            <i class="bi {{#if isSeen}}bi-eye{{else}}bi-eye-slash{{/if}}"></i>
        </button>
    </div>
</div>

<style>

@media (max-width: 768px) {
    .notification-item {
        flex-direction: column;
    }
    .notification-toggle {
        align-self: flex-end;
    }
}
</style>
