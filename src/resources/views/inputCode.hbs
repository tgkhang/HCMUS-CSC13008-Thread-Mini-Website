{{>header}}
<main class="d-flex flex-column align-items-center pt-5 mt-5">
    <h1 class="fs-1 mt-4 text-center">Enter Verification Code</h1>
    <p class="fs-4 text-center text-muted mt-3 mb-4">Enter the 6-digit code sent to your email or phone to proceed with resetting your password.</p>

    <!-- Icon Section -->
    <div class="mb-4">
        <i class="bi bi-lock display-4 text-warning"></i>
    </div>

    <!-- Verification Code Input Section -->
    <div class="form-floating mb-4 w-75 w-md-50 w-lg-25">
        <input
            type="text"
            class="form-control form-control-lg"
            name="verificationCode"
            id="verificationCode"
            placeholder="Enter code"
            aria-label="Enter verification code"
            required
            maxlength="6"
        />
        <label for="verificationCode">Verification Code</label>
    </div>

    <!-- Submit Button -->
    <a href="/changePassword" class="btn btn-primary btn-lg px-4 py-2 mt-3">Verify Code</a>
    <!-- Back Link -->
    <a href="change" class="btn btn-link mt-3">Resend Code</a>
</main>
